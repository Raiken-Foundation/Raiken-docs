---
import '../styles/global.css';
const { title = 'Raiken' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body class="bg-dark-900 text-white min-h-screen flex flex-col font-sans antialiased">
    <nav class="border-b border-white/5 sticky top-0 z-50 bg-dark-900/80 backdrop-blur-md">
        <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex items-center justify-between h-14">
                <div class="flex items-center">
                    <a href="/" class="text-base font-semibold text-white tracking-tight flex items-center gap-2">
                        <div class="w-5 h-5 bg-brand-500 rounded"></div>
                        Raiken
                    </a>
                    <div class="hidden md:block ml-8">
                        <div class="flex items-center space-x-1">
                            <a href="/features" class="text-gray-400 hover:text-white px-3 py-1.5 rounded-md text-sm transition-colors">Features</a>
                            <a href="/docs" class="text-gray-400 hover:text-white px-3 py-1.5 rounded-md text-sm transition-colors">Docs</a>
                            <a href="/about" class="text-gray-400 hover:text-white px-3 py-1.5 rounded-md text-sm transition-colors">About</a>
                            <a href="/contact" class="text-gray-400 hover:text-white px-3 py-1.5 rounded-md text-sm transition-colors">Contact</a>
                        </div>
                    </div>
                </div>
                <div class="hidden md:flex items-center gap-3">
                    <a href="https://www.npmjs.com/package/raiken" class="text-gray-400 hover:text-white p-1.5 transition-colors" title="npm">
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M0 7.334v8h6.666v1.332H12v-1.332h12v-8H0zm6.666 6.664H5.334v-4H3.999v4H1.335V8.667h5.331v5.331zm4 0v1.336H8.001V8.667h5.334v5.332h-2.669v-.001zm12.001 0h-1.33v-4h-1.336v4h-1.335v-4h-1.33v4h-2.671V8.667h8.002v5.331zM10.665 10H12v2.667h-1.335V10z"/></svg>
                    </a>
                    <a href="/getting-started" class="inline-flex items-center px-3 py-1.5 bg-brand-600 hover:bg-brand-500 text-white text-sm font-medium rounded-md transition-colors">
                        Get started
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <main class="flex-grow">
        <slot />
    </main>

    <footer class="border-t border-white/5 py-10 mt-16">
        <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="grid grid-cols-2 md:grid-cols-5 gap-8">
                <div class="col-span-2 md:col-span-1">
                    <a href="/" class="text-base font-semibold text-white tracking-tight flex items-center gap-2 mb-4">
                        <div class="w-5 h-5 bg-brand-500 rounded"></div>
                        Raiken
                    </a>
                    <p class="text-xs text-gray-500">AI-powered test generation</p>
                </div>
                <div>
                    <h3 class="text-xs font-medium text-gray-400 uppercase tracking-wider mb-3">Product</h3>
                    <ul class="space-y-2">
                        <li><a href="/features" class="text-sm text-gray-500 hover:text-white transition-colors">Features</a></li>
                    </ul>
                </div>
                <div>
                    <h3 class="text-xs font-medium text-gray-400 uppercase tracking-wider mb-3">Resources</h3>
                    <ul class="space-y-2">
                        <li><a href="/docs" class="text-sm text-gray-500 hover:text-white transition-colors">Documentation</a></li>
                        <li><a href="#" class="text-sm text-gray-500 hover:text-white transition-colors">Changelog</a></li>
                    </ul>
                </div>
                <div>
                    <h3 class="text-xs font-medium text-gray-400 uppercase tracking-wider mb-3">Company</h3>
                    <ul class="space-y-2">
                        <li><a href="/about" class="text-sm text-gray-500 hover:text-white transition-colors">About</a></li>
                        <li><a href="/contact" class="text-sm text-gray-500 hover:text-white transition-colors">Contact</a></li>
                    </ul>
                </div>
                <div>
                    <h3 class="text-xs font-medium text-gray-400 uppercase tracking-wider mb-3">Legal</h3>
                    <ul class="space-y-2">
                        <li><a href="#" class="text-sm text-gray-500 hover:text-white transition-colors">Privacy</a></li>
                        <li><a href="#" class="text-sm text-gray-500 hover:text-white transition-colors">Terms</a></li>
                    </ul>
                </div>
            </div>
            <div class="mt-8 pt-6 border-t border-white/5 flex flex-col md:flex-row justify-between items-center gap-4">
                <p class="text-xs text-gray-500">&copy; 2026 Raiken. All rights reserved.</p>
                <div class="flex items-center gap-4">
                    <a href="https://www.npmjs.com/package/raiken" class="text-gray-500 hover:text-white transition-colors" title="npm">
                        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M0 7.334v8h6.666v1.332H12v-1.332h12v-8H0zm6.666 6.664H5.334v-4H3.999v4H1.335V8.667h5.331v5.331zm4 0v1.336H8.001V8.667h5.334v5.332h-2.669v-.001zm12.001 0h-1.33v-4h-1.336v4h-1.335v-4h-1.33v4h-2.671V8.667h8.002v5.331zM10.665 10H12v2.667h-1.335V10z"/></svg>
                    </a>
                </div>
            </div>
        </div>
    </footer>
</body>
</html>
